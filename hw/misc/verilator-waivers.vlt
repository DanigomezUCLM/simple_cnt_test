`verilator_config
// Regtool automatically-generated files
lint_off -rule PINCONNECTEMPTY -file "*/cnt_control_reg_top.sv" -match "Cell pin connected by name with empty reference: '*'"
lint_off -rule WIDTH -file "*/cnt_control_reg_top.sv" -match "Operator ASSIGNW expects * bits on the Assign RHS, but Assign RHS's SEL generates 32 bits."
lint_off -rule UNUSEDPARAM -file "*/cnt_control_reg_pkg.sv" -match "Parameter is not used: *"

// PULP files
lint_off -rule PINCONNECTEMPTY -file "*/prim_subreg_shadow.sv" -match "Cell pin connected by name with empty reference: '*'"
lint_off -rule WIDTHEXPAND -file "*/prim_subreg_arb.sv" -match "Operator EQ expects 24 bits on the LHS, but LHS's VARREF 'SWACCESS' generates 16 bits."

// OBI bridge
lint_off -rule UNUSEDSIGNAL -file "*/cnt_obi_to_reg.sv" -match "Bits of signal are not used: *"
lint_off -rule UNUSEDSIGNAL -file "*/cnt_obi.sv" -match "Bits of signal are not used: 'cnt_thr'*"
lint_off -rule UNUSEDSIGNAL -file "*/cnt_obi.sv" -match "Bits of signal are not used: 'obi_wdata_i'*"
